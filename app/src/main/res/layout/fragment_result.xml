<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.chat.result.ResultFragment">

    <ImageView
        android:layout_width="164dp"
        android:layout_height="100dp"
        android:src="@drawable/eco"
        android:id="@+id/iv_status"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Спасибо за сообщение о \nпроблеме "
        android:gravity="center"
        android:textSize="22sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="25dp"
        android:textColor="@color/light_green"
        android:id="@+id/tv_status_title"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мы ценим ваш отзыв и уже работаем над \nрешением. В знак благодарности мы \nначислили вам 10 экокоинтов."
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#070707"
        android:fontFamily="@font/roboto"
        android:layout_marginVertical="36dp"
        android:id="@+id/tv_status_desc"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Баланс экокоинтов \nдоступен в личном кабинете \nв разделе Достижения."
        android:gravity="center"
        android:id="@+id/tv_report_coin_balance"
        android:textColor="#646464"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_marginTop="36dp"
        app:cornerRadius="10dp"
        android:text="OK"
        android:textColor="@color/black"
        android:paddingHorizontal="60dp"
        android:backgroundTint="#DEDEDE"
        android:id="@+id/btn_ok"
        android:layout_height="wrap_content"/>
    
</LinearLayout>